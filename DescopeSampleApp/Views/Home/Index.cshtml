<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rana Ren√©</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding-top: 50px;
        }
        button {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
        }
        button:hover {
            background-color: #45a049;
        }
        #contador {
            font-size: 24px;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <main>
        <section class="row" aria-labelledby="aspnetTitle">
            <h1 id="aspnetTitle">RANA RENE</h1>
            <p class="lead">Bonita</p>
        </section>

        <section>
            <button id="botonContar">Haz clic aqu√≠ üê∏</button>
            <p id="contador">0</p>
        </section>
    </main>

    <script>
        let contador = 0;
        const boton = document.getElementById('botonContar');
        const textoContador = document.getElementById('contador');

        boton.addEventListener('click', () => {
            contador++;
            textoContador.textContent = contador;
        });
    </script>
</body>
</html>
